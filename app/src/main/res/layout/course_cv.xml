<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:animateLayoutChanges="true"
    app:pressedTranslationZ="8dp"
    android:id="@+id/courseListCV" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:id="@+id/parentLayout">
    
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/courseListElement"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="2">
        
        
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.5">
        
                <TextView
                    android:id="@+id/nameDisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainTextCol"
                    android:text="Default Name"
                    android:textSize="22sp" />
        
                <TextView
                    android:id="@+id/roomDisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightTextCol"
                    android:text="Room Default"
                    android:textSize="20sp"/>
            </LinearLayout>
        
            <TextView
                android:id="@+id/gradeDisp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/mainTextCol"
                android:textSize="30sp" />
        
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>