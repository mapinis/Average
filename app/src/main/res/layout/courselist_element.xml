<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:id="@+id/courseListElement"
    android:layout_height="70dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/border"
    android:clickable="true"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:layout_weight="1.7">

        <TextView
            android:id="@+id/nameDisp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/mainTextCol"
            android:text="Default Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/roomDisp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/lightTextCol"
            android:text="Room Default"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/gradeDisp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:textAlignment="center"
        android:gravity="center"
        android:text="A+"
        android:textColor="@color/mainTextCol"
        android:textSize="30sp" />

</LinearLayout>